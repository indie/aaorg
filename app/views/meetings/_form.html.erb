<%= form_for @meeting, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :day, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :day, :class => 'text_field', placeholder: "format Sunday, 08:00 PM" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :address, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :address, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :city, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :city, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :codes, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :codes, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :map, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :map, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :notes, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :notes, :class => 'text_area' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-custom' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                meetings_path, :class => 'btn btn-custom' %>
  </div>
<% end %>
