<%- model_class = Meeting -%>
  <%#=t '.titley,', :default => model_class.model_name.human.pluralize %>
<div class="navbar">
  <div class="navbar-inner">
    <ul class="nav">
    <li class="active"><%= link_to "All Days", meetings_path %></li>
    <li><%= link_to "Sunday", '/meetings?utf8=%E2%9C%93&q[day_cont]=sun&commit=Search' %></li>    
    <li><%= link_to "Monday", '/meetings?utf8=%E2%9C%93&q[day_cont]=mon&commit=Search' %></li>
    <li><%= link_to "Tuesday", '/meetings?utf8=%E2%9C%93&q[day_cont]=tue&commit=Search' %></li>
    <li><%= link_to "Wednesday", '/meetings?utf8=%E2%9C%93&q[day_cont]=wed&commit=Search' %></li>
    <li><%= link_to "Thursday", '/meetings?utf8=%E2%9C%93&q[day_cont]=thu&commit=Search' %></li>
    <li><%= link_to "Friday", '/meetings?utf8=%E2%9C%93&q[day_cont]=fri&commit=Search' %></li>
    <li><%= link_to "Saturday", '/meetings?utf8=%E2%9C%93&q[day_cont]=sat&commit=Search' %></li>
    </ul>
  </div>
</div>

<%= search_form_for @search do |f| %>

  <div class="field">
    <%= f.text_field :day_cont %> &nbsp; &nbsp; &nbsp; Day 

  <div class="field">
    <%= f.text_field :city_cont %> &nbsp; &nbsp; &nbsp; Add city -- <em>partial OK!</em> Gil = Gilroy, Pal = Palo Alto, etc.</em>
  </div>

  <div class="field">
    <%= f.text_field :name_or_day_or_address_or_city_or_notes_or_codes_cont %> &nbsp; &nbsp; &nbsp; Look up by meeting name, chip meetings, street, location, etc.
  </div>
 
  <div class="actions"><%= f.submit "Search" %></span>

<% end %>

<div id="go-south">
<table class="table table-striped">
  <thead>
    <tr>
      <th class="numeric"><%= sort_link @search, :daytime, "Day and Time" %></th>
      <th class="numeric"><%= sort_link @search, :name, "Meeting Name" %></th>
      <th class="numeric"><%= sort_link @search, :location, "Location"  %></th>
      <th class="numeric"><%= sort_link @search, :city, "City" %></th>
      <th class="numeric"><%= sort_link @search, :codes, "Codes" %></th>
      <th class="numeric"><%= model_class.human_attribute_name(:map) %></th>
      <th class="numeric"><%= sort_link @search, :notes %></th>
      <th class="numeric"><%= sort_link @search, :created_at, "Added" %></th>
      <th class="numeric"><%= model_class.human_attribute_name(:id) %></th>
      <th><%#=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @meetings.each do |meeting| %>
      <tr>
        <td data-title="Day"><%= meeting.day %></td>
        <td data-title="Name"><%= link_to meeting.name, meeting_path(meeting) %></td>
        <td data-title="Address"><%= meeting.address %></td>
        <td data-title="City"><%= meeting.city %></td>
        <td data-title="Codes"><%= meeting.codes %></td>
        <td data-title="Map"><%= meeting.map %></td>
        <td data-title="Notes"><%= meeting.notes %></td>
        <td data-title="Added"><%=l meeting.created_at %></td>
        <td data-title="ID"><%= link_to meeting.id, meeting_path(meeting) %></td>
        <td>
          <%#= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_meeting_path(meeting), :class => 'btn btn-mini' %>
          <%#= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      meeting_path(meeting),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
                    

        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<%#= link_to t('.new', :default => t("helpers.links.new")),
            new_meeting_path,
            :class => 'btn btn-primary' %>