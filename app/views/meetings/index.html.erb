<%- model_class = Meeting -%>
  <%#=t '.title in Santa Clara County,', :default => model_class.model_name.human.pluralize %>

<h1>Meetings in Santa Clara County</h1>

    <ul class="nav nav-pills">
    <li class="active"><a href="#tab1" data-toggle="tab">All Days</a></li>
    <li><%= link_to "Sunday", '/meetings?utf8=%E2%9C%93&q[day_cont]=sun&commit=Search' %></li>    
    <li><%= link_to "Monday", '/meetings?utf8=%E2%9C%93&q[day_cont]=mon&commit=Search' %></li>
    <li><%= link_to "Tuesday", '/meetings?utf8=%E2%9C%93&q[day_cont]=tue&commit=Search' %></li>
    <li><%= link_to "Wednesday", '/meetings?utf8=%E2%9C%93&q[day_cont]=wed&commit=Search' %></li>
    <li><%= link_to "Thursday", '/meetings?utf8=%E2%9C%93&q[day_cont]=th&commit=Search' %></li>
    <li><%= link_to "Friday", '/meetings?utf8=%E2%9C%93&q[day_cont]=fr&commit=Search' %></li>
    <li><%= link_to "Saturday", '/meetings?utf8=%E2%9C%93&q[day_cont]=sat&commit=Search' %></li>
    </ul>

<%= search_form_for @search do |f| %>

  <div class="field">
  <%= f.text_field :day_cont %> &nbsp; &nbsp; &nbsp; Day 

  <div class="field">
    <%= f.text_field :city_cont %> &nbsp; &nbsp; &nbsp; Add City <em>partial OK -- i.e. Gil for Gilroy </em>
  </div>

    <div class="field">
    <%= f.text_field :name_or_day_or_address_or_city_or_codes_cont %> &nbsp; &nbsp; &nbsp; Look up by meeting name, chip meetings, street, location, etc.
  </div>
 
  <div class="actions"><%= f.submit "Search" %></span>

<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:day) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:city) %></th>
      <th><%= model_class.human_attribute_name(:codes) %></th>
      <th><%= model_class.human_attribute_name(:map) %></th>
      <th><%= model_class.human_attribute_name(:notes) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%#=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @meetings.each do |meeting| %>
      <tr>
        <td><%= link_to meeting.id, meeting_path(meeting) %></td>
        <td><%= meeting.day %></td>
        <td><%= link_to meeting.name, meeting_path(meeting) %></td>
        <td><%= meeting.address %></td>
        <td><%= meeting.city %></td>
        <td><%= meeting.codes %></td>
        <td><%= meeting.map %></td>
        <td><%= meeting.notes %></td>
        <td><%=l meeting.created_at %></td>
        <td>
          <%#= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_meeting_path(meeting), :class => 'btn btn-mini' %>
          <%#= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      meeting_path(meeting),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_meeting_path,
            :class => 'btn btn-primary' %>